{
	"$schema": "http://json.schemastore.org/tsconfig",
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"moduleResolution": "Bundler",
		"module": "esnext",
		"lib": ["esnext", "dom", "dom.iterable"],
		"target": "esnext",
		"isolatedModules": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": true,
		"checkJs": true,
		"strict": true,
		"noImplicitReturns": true,
		"strictNullChecks": true,
		"removeComments": false,
		"noImplicitThis": true,
		"noImplicitAny": false,
		"importHelpers": true,
		"verbatimModuleSyntax": true,
		"types": ["@sveltejs/kit", "svelte"],
		"declaration": true, // https://api-extractor.com/pages/setup/invoking/#invoking-via-the-command-line
		"declarationMap": true, // https://api-extractor.com/pages/setup/invoking/#invoking-via-the-command-line
	},
	"include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.ts", "src/**/*.svelte"],
	"exclude": ["**/*.example.js"]
}
